<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Portainer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use Material You dynamic color via DynamicColors.applyToActivitiesIfAvailable -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <!-- Edge-to-edge: transparent system bars (content draws behind) -->
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Use light (white) status bar icons to contrast the gradient -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- MaterialToolbar instances use explicit style in layouts -->
    </style>

    <style name="Widget.Portainer.MaterialToolbar" parent="Widget.Material3.Toolbar">
        <!-- Gradient background to match app logo -->
        <item name="android:background">@drawable/toolbar_gradient</item>
        <!-- Ensure good contrast on the blue/purple gradient -->
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="navigationIconTint">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
