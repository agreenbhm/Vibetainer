<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <CheckBox
            android:id="@+id/check_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/check_select"
            android:layout_marginStart="12dp"
            android:text="volume_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            />

        <TextView
            android:id="@+id/text_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_toEndOf="@id/check_select"
            android:layout_marginStart="12dp"
            android:text="node: node_name"
            android:textSize="12sp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_unused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/text_node"
            android:layout_marginTop="4dp"
            android:text="unused"
            android:textColor="@android:color/white"
            app:chipBackgroundColor="@android:color/holo_red_dark"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

