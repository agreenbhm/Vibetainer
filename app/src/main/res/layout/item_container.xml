<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/text_container_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/container"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/text_container_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="image:tag"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_container_affinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="?attr/colorSecondary" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/check_select_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:contentDescription="Select container" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_container_state"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="running" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
