<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/Widget.Portainer.MaterialToolbar"
        android:id="@+id/toolbar_mount_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.Material3"
        android:title="Mount Browser" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_mount_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_mount_browser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Container and Status Info -->
            <TextView
                android:id="@+id/text_mount_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Container Info"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="8dp" />

            <!-- Current path -->
            <TextView
                android:id="@+id/text_current_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:padding="8dp"
                android:background="?attr/colorSurfaceVariant"
                android:text="/" />

            <!-- File list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_files"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="true"
                android:paddingTop="8dp" />

            <!-- Empty state -->
            <TextView
                android:id="@+id/text_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empty directory"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
