<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/Widget.Portainer.MaterialToolbar"
        android:id="@+id/toolbar_network_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.Material3"
        android:title="Network Details" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_network_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/content_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="?attr/colorSurface">

                <!-- Network Name (bold and large) -->
                <TextView
                    android:id="@+id/text_network_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Network Name"
                    android:textColor="?attr/colorOnSurface"
                    />

                <!-- Network ID -->
                <TextView
                    android:id="@+id/text_network_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Network ID"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="4dp" />

                <!-- Network Properties -->
                <LinearLayout
                    android:id="@+id/layout_network_properties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">
                </LinearLayout>

                <!-- Connected Containers Section Header -->
                <TextView
                    android:id="@+id/text_containers_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connected Containers"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

                <!-- Container Cards -->
                <LinearLayout
                    android:id="@+id/container_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp" />

                <!-- No Containers Text -->
                <TextView
                    android:id="@+id/text_no_containers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No containers connected to this network"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>